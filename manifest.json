{
  "name": "Youtube Music Info",
  "description": "Get the info of a youtube music song",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "host_permissions": ["https://music.youtube.com/*"],
  "background": {
    "service_worker": "./dist/background.js"
  },
  "action": {
    "default_popup": "./views/popup.html",
    "default_icon": {
      "16": "./icons/icon16.png",
      "32": "./icons/icon32.png",
      "48": "./icons/icon48.png",
      "128": "./icons/icon128.png"
    }
  },
  "icons": {
    "16": "./icons/icon16.png",
    "32": "./icons/icon32.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["./dist/content.js"]
    }
  ]
}
